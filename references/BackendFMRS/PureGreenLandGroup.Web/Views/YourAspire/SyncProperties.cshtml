@model PureGreenLandGroup.Models.ViewModel.Properties.PropertyCountsVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .stat-card {
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 20px;
        margin: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .stat-card h5 {
            font-weight: bold;
        }

    .sync-btn {
        margin-bottom: 20px;
    }
</style>

<div class="rightSection">
    <div class="container mt-4">
        <div class="d-flex justify-content-end">
            <button class="btn btn-success">Sync Now</button>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="stat-card text-center">
                    <h5>Total Properties</h5>
                    <p id="totalPropsCount" class="display-4">@Model.TotalPropertiesCount</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card text-center">
                    <h5>Active Properties</h5>
                    <p id="activePropsCount" class="display-4">@Model.ActivePropertiesCount </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card text-center">
                    <h5>Inactive Properties</h5>
                    <p id="inactivePropsCount" class="display-4">@Model.InactivePropertiesCount </p>
                </div>
            </div>
        </div>
    </div>
</div>