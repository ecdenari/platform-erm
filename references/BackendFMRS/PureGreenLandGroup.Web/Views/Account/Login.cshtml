@using PureGreenLandGroup.Models.DTO.WebAuthentication
@model LoginUserVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="icon" type="image/x-icon" href="~/favicon/favicon-puregreenlandgroup.com-3-180x180.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
    <link href="~/Login/css/style.css" rel="stylesheet">
    <link href="~/Login/css/responsive.css" rel="stylesheet">
</head>
<body>
    <!--page loader section on layout -->
    <div class="overlay" id="Loader" style="display:none">
        <img src="~/admindashboard/loader/spin@1x-1.0s-200px-200px.gif" alt="Please Wait..." style="width:100px;margin-top: -150px;" />
    </div>

    <div class="loginSec">
        <div class="loginFormSec">
            <div class="loginLeftPanel">
                <img src="~/Login/Images/PureGreen-Logo.png" class="img-fluid" />
                <p>
                    Welcome to PureGreen! We are a team of landscape experts <br>dedicated to providing quality
                    commercial landscape <br>maintenance and construction installation services.
                </p>
            </div>

            <div class="loginRightPanel loginFormWrapoer">
                <span class="leaveImg">
                    <img src="~/Login/Images/PureGreen-Leaves-logo.png" />
                </span>

                <h2>Login to your account</h2>
                <p>Welcome back ! Please enter your details below.</p>
                <form asp-action="Login" asp-controller="Account" method="post">
                    <div class="form-group mb-4">
                        <div class=" cstmFormInputBox position-relative">
                            <span class="cstmIcon">
                                <svg width="25" height="20" viewBox="0 0 28 23" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M3.6 1.09998H24.4C25.83 1.09998 27 2.26998 27 3.69998V19.3C27 20.73 25.83 21.9 24.4 21.9H3.6C2.17 21.9 1 20.73 1 19.3V3.69998C1 2.26998 2.17 1.09998 3.6 1.09998Z"
                                          stroke="#0F572F" stroke-opacity="0.8" stroke-width="2" stroke-linecap="round"
                                          stroke-linejoin="round" />
                                    <path d="M27 3.7002L14 12.8002L1 3.7002" stroke="#0F572F" stroke-opacity="0.8"
                                          stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                            </span>
                            <input type="email" asp-for="Email" class="form-control" placeholder="Email" maxlength="60" autocomplete="new-email">
                        </div>
                        <span asp-validation-for="Email" class="text-danger validationSpan"> </span>
                    </div>

                    <div class="form-group mb-4">
                        <div class=" cstmFormInputBox position-relative">
                            <span class="cstmIcon">
                                <svg width="25" height="30" viewBox="0 0 28 33" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M14 20.5625V23.8125M5.875 13.2968C6.64106 13.25 7.58546 13.25 8.8 13.25H19.2C20.4145 13.25 21.359 13.25 22.125 13.2968M5.875 13.2968C4.91898 13.3551 4.24072 13.4864 3.6618 13.7814C2.7445 14.2487 1.99873 14.9944 1.53134 15.9117C1 16.9547 1 18.3197 1 21.05V23.325C1 26.0553 1 27.4203 1.53134 28.4632C1.99873 29.3806 2.7445 30.1263 3.6618 30.5936C4.70461 31.125 6.06974 31.125 8.8 31.125H19.2C21.9303 31.125 23.2953 31.125 24.3382 30.5936C25.2556 30.1263 26.0013 29.3806 26.4686 28.4632C27 27.4203 27 26.0553 27 23.325V21.05C27 18.3197 27 16.9547 26.4686 15.9117C26.0013 14.9944 25.2556 14.2487 24.3382 13.7814C23.7593 13.4864 23.081 13.3551 22.125 13.2968M5.875 13.2968V10C5.875 5.51269 9.51269 1.875 14 1.875C18.4873 1.875 22.125 5.51269 22.125 10V13.2968"
                                          stroke="#0F572F" stroke-opacity="0.8" stroke-width="2" stroke-linecap="round"
                                          stroke-linejoin="round" />
                                </svg>
                            </span>
                            <input type="password" id="PasswordInput" asp-for="Password" class="form-control" placeholder="Password" maxlength="16" autocomplete="new-password" onchange="FormatValidation()">
                            <span class="cstmEyeIcon">
                                <i class="fa-regular fa-eye" id="ShowPasswordIdcon" data-show-pass="true"></i>
                            </span>
                        </div>
                        <span asp-validation-for="Password" class="text-danger validationSpan" id="PasswordValidationContainer"> </span>
                    </div>
                    <div class="d-flex  justify-content-end">
                        @* <div class="form-check cstmFormCheck">
                            <input class="form-check-input" type="checkbox" value="" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">
                                Remember me
                            </label>
                        </div> *@
                        <a asp-action="ForgotPassword" asp-controller="Account" class="forgotPassword">Forgot Password?</a>
                    </div>
                    <div class="btnBox mt-4">
                        <button type="submit" class="cstmBTN" onclick="localStorage.clear();">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/login/js/login.js"></script>
</body>
</html>

