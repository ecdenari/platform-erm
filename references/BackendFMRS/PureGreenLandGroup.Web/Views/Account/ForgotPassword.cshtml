@using PureGreenLandGroup.Models.ViewModel.Account
@model ResetPasswordVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <link rel="icon" type="image/x-icon" href="~/favicon/favicon-puregreenlandgroup.com-3-180x180.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
    <link href="~/Login/css/style.css" rel="stylesheet">
    <link href="~/Login/css/responsive.css" rel="stylesheet">
</head>
<body>
    <!--page loader section on layout -->
    <div class="overlay" id="Loader" style="display:none">
        <img src="~/admindashboard/loader/spin@1x-1.0s-200px-200px.gif" alt="Please Wait..." style="width:100px;margin-top: -150px;" />
    </div>

    <div class="loginSec">
        <div class="loginFormSec">
            <div class="loginLeftPanel">
                <img src="~/Login/Images/PureGreen-Logo.png" class="img-fluid" />
                <p>
                    Welcome to PureGreen! We are a team of landscape experts <br>dedicated to providing quality
                    commercial landscape <br>maintenance and construction installation services.
                </p>
            </div>

            <div class="loginRightPanel loginFormWrapoer">
                <span class="leaveImg">
                    <img src="~/Login/Images/PureGreen-Leaves-logo.png" />
                </span>

                <h2>Forgot Password</h2>
                <p>Enter your email and we'll send you a link to reset your password.</p>
                <form asp-action="ForgotPassword" asp-controller="Account" method="post" enctype="multipart/form-data">
                    <div class="form-group mb-4">
                        <div class=" cstmFormInputBox position-relative">
                            <span class="cstmIcon">
                                <svg width="25" height="20" viewBox="0 0 28 23" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M3.6 1.09998H24.4C25.83 1.09998 27 2.26998 27 3.69998V19.3C27 20.73 25.83 21.9 24.4 21.9H3.6C2.17 21.9 1 20.73 1 19.3V3.69998C1 2.26998 2.17 1.09998 3.6 1.09998Z"
                                          stroke="#0F572F" stroke-opacity="0.8" stroke-width="2" stroke-linecap="round"
                                          stroke-linejoin="round" />
                                    <path d="M27 3.7002L14 12.8002L1 3.7002" stroke="#0F572F" stroke-opacity="0.8"
                                          stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                            </span>
                            <input type="email" asp-for="Email" class="form-control" placeholder="Email" maxlength="60" autocomplete="new-email">
                        </div>
                        <span asp-validation-for="Email" class="text-danger validationSpan"> </span>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="mt-4">
                          <span>
                                <img src="~/admindashboard/images/check_icon.jfif" style="width: 20px;">
                          </span>
                            <span style="color:#1a7e07;"> @Model.Message</span>
                        </div>
                    }
                    else
                    {

                        <div class="d-flex  justify-content-end">
                            <a asp-action="Login" asp-controller="Account" class="forgotPassword">Back to Login</a>
                        </div>
                        <div class="btnBox mt-4">
                            <button type="submit" class="cstmBTN">Get Reset Link</button>
                        </div>

                        
                    }
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/login/js/login.js"></script>
</body>
</html>
