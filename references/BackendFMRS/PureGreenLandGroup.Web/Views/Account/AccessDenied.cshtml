@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Access Denied";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Access Denied</title>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .access-denied-container {
            text-align: center;
            margin-top: 100px;
        }

            .access-denied-container h1 {
                font-size: 10rem;
            }

            .access-denied-container p {
                font-size: 2rem;
            }

            .access-denied-container .btn-primary {
                font-size: 1.5rem;
                padding: 10px 20px;
            }

        .additional-info {
            margin-top: 50px;
        }

            .additional-info h2 {
                font-size: 2rem;
                color: #343a40;
            }

            .additional-info p {
                font-size: 1.2rem;
                color: #495057;
            }
    </style>
</head>
<body>
    <div class="container access-denied-container">
        <h2>403</h2>
        <p>Access denied to this page</p>
        <a onclick="history.back()" class="btn btn-success">Go Back</a>
    </div>
    <div class="container additional-info">
        <div class="row">
            <div class="col-md-12">
                <h2>Additional Information</h2>
                <p>We're sorry, but you do not have permission to view this page. If you believe this is a mistake, please contact our support team for assistance.</p>
            </div>
        </div>
    </div>
</body>
</html>